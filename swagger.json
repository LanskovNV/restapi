{
  "openapi": "3.0.0",
  "info": {
    "title": "Restapi",
    "description": "Simple restapi application",
    "contact": {
      "name": "API Support",
      "email": "leins275@gmail.com"
    },
    "license": {
      "name": "MIT"
    },
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:5000/api/v1",
      "description": "default local server"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Authorization requests"
    },
    {
      "name": "Employees",
      "description": "Employees requests"
    }
  ],
  "components": {
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "responses": {
      "NotFound": {
        "description": "Entity not found."
      }
    },
    "schemas": {
      "Employee":{
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "required": true
          },
          "surname": {
            "type": "string",
            "required": true
          },
          "birthday_date": {
            "type": "string",
            "required": true
          },
          "position": {
            "type": "string",
            "required": true
          },
          "salary": {
            "type": "integer",
            "required": true
          }
        }
      },
      "AuthToken": {
        "type": "object",
        "properties": {
          "token": {
            "type": "string"
          }
        }
      },
      "AuthCredentials": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "required": true
          },
          "password": {
            "type": "string",
            "required": true
          }
        }
      },
      "AuthTokenUsername": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "required": true
          },
          "token": {
            "type": "string",
            "required": true
          }
        }
      }
    }
  },
  "paths": {
    "/auth": {
      "get": {
        "description": "Get new token for authorized users",
        "tags": ["Auth"],
        "parameters": [
          {
            "name": "username",
            "in": "query",
            "required": true
          },
          {
            "name": "password",
            "in": "query",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "New token (expires in 5 minutes)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthToken"
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Create new user and generate new token",
        "tags": ["Auth"],
        "requestBody": {
          "description": "User credentials",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthCredentials"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "New token (expires in 5 minutes)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthTokenUsername"
                }
              }
            }
          }
        }
      }
    },
    "/employees": {
      "get": {
        "description": "Get paginated employees",
        "tags": ["Employees"],
        "parameters": [
          {
            "name": "name",
            "in": "query"
          },
          {
            "name": "surname",
            "in": "query"
          },
          {
            "name": "page_num",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully got paginated employees",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Employee"
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Get paginated employees",
        "tags": ["Employees"],
        "security": [
          {
            "Bearer": []
          }
        ],
        "requestBody": {
          "description": "New employee data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Employee"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully got paginated employees",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Employee"
                }
              }
            }
          }
        }
      }
    },
    "/employees/{id}": {
      "get": {
        "description": "Get employee by id",
        "tags": ["Employees"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully got employee",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Employee"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      },
      "delete": {
        "description": "Get employee by id",
        "tags": ["Employees"],
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Employee has successfully deleted",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Employee"
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          }
        }
      },
      "put": {
        "description": "Get employee by id",
        "tags": ["Employees"],
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true
          }
        ],
        "requestBody": {
          "description": "New user parameters",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Employee"
              }
            }
          }
        },
        "responses": {

        }
      }
    }
  }
}